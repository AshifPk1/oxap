<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences for patient.visit -->
        <record id="token_patient_visit" model="ir.sequence">
            <field name="name">Patient visit Token</field>
            <field name="code">medical.opthalmology</field>
            <field name="prefix">PV</field>
            <field name="padding">4</field>
            <field name="patient_id" eval="False"/>
        </record>
        <record id="token_patient_visit_optics" model="ir.sequence">
            <field name="name">Patient visit Token</field>
            <field name="code">medical.optics</field>
            <field name="prefix">OP</field>
            <field name="padding">4</field>
            <field name="patient_id" eval="False"/>
        </record>
        <record id="seq_counselling_sub_state" model="ir.sequence">
            <field name="name">Counselling Sub State</field>
            <field name="code">counselling.substate</field>
            <field name="prefix">CS</field>
            <field name="sub_state" eval="False"/>
        </record>
        <record id="old_glass_sequence" model="ir.sequence">
            <field name="name">Old Glass Sequence</field>
            <field name="code">old.glass</field>
            <field name="prefix">OG</field>
            <field name="padding">2</field>
            <field name="patient_id" eval="False"/>
        </record>
        <record id="appointment_sequence" model="ir.sequence">
            <field name="name">Appointment Sequence</field>
            <field name="code">medical.appointment</field>
            <field name="prefix">AP-%(y)s%(month)s%(day)s-</field>
            <field name="padding">3</field>
            <field name="patient_id" eval="False"/>
        </record>
    </data>
</odoo>
