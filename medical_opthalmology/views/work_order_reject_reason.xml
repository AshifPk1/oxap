<odoo>
    <record id="reject_reason_tree" model="ir.ui.view">
        <field name="name">Cancel Reason</field>
        <field name="model">work.order.reject.reason</field>
        <field name="arch" type="xml">
            <tree string="Cancel Reason" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id="relect_reason_action" model="ir.actions.act_window">
        <field name="name">Cancel Reason</field>
        <field name="res_model">work.order.reject.reason</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="work_order_reject" name="Cancel Reason" parent="medical_opthalmology.configuration"
              action="relect_reason_action" groups="medical_opthalmology.group_opticals_access"/>

</odoo>