<odoo>
     <record id="work_order_reject_wizard_view" model="ir.ui.view">
        <field name="name">work.order.reject.wizard.form</field>
        <field name="model">work.order.reject.wizard</field>
        <field name="arch" type="xml">
            <form >
                <group>
                     <field name="reject_reason"/>
                     <field name="optics_id" invisible="1"/>
                     <field name="sales_person_id"/>
                </group>
                <footer>
                    <button name="reject_work_order" string="Proceed" type='object' class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
     </record>
     <record model="ir.actions.act_window" id="work_order_reject_wizard_action">
            <field name="name">Cancel Reason</field>
            <field name="res_model">work.order.reject.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>