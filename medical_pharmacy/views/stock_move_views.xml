<odoo>
    <record id="view_stock_move_tree_inherited" model="ir.ui.view">
        <field name="name">stock.picking.inherited</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='lot_name']" position="after">
                <field name="expiry_date" attrs="{'readonly': [('in_entire_package', '=', True)]}"
                       groups="stock.group_production_lot" force_save="1"/>
                <field name="sale_price" attrs="{'readonly': [('in_entire_package', '=', True)]}"
                       groups="stock.group_production_lot" force_save="1"/>
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="sale_order_count_form">
        <field name="name">stock_picking_form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_lines']/tree/field[@name='product_id']" position="after">
                <field name='lot_id'/>
                <field name='sale_price'/>
            </xpath>
        </field>
    </record>
</odoo>