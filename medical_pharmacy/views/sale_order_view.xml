<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                <field name="doctor_id"/>
                <field name="lot_number_id"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='order_line']/form//field[@name='price_unit']" position="after">
                <field name="doctor_id"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="doctor_id"/>
            </xpath>
        </field>
    </record>
</odoo>