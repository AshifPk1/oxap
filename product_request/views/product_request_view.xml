<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_request_form" model="ir.ui.view">
        <field name="name">product.request.form</field>
        <field name="model">product.request</field>
        <field name="arch" type="xml">
            <form string="Request For Product" class="o_sale_order">
                <sheet>
                    <header>

                        <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved,done"/>
                        <button name="action_requested" string="Request" type='object' class="btn-primary"
                                attrs="{'invisible': [('state','!=', 'draft')]}"/>
                        <button name="action_cancel" string="Cancel" type='object' class="btn-primary"
                                attrs="{'invisible': [('state','in', ('draft','cancelled'))]}"/>
                        <button name="action_approved" string="Approve" type='object' class="btn-primary"
                                attrs="{'invisible': [('state','!=', 'requested')]}"
                                groups="base.group_erp_manager"/>
                        <button name="action_done" string="Done" type='object' class="btn-primary"
                                attrs="{'invisible': [('state','!=', 'approved')]}"/>
                    </header>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_rfq" type="object" class="oe_stat_button" icon="fa-file-o"
                                string="Purchase Order"
                                attrs="{'invisible': [('state','!=', 'approved')]}">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>

                            <field name="user" readonly="1"
                                   attrs="{'readonly': [('state','in', ('requested','approved','done','cancelled'))]}"/>
                            <field name="doctor" required="1"
                                   attrs="{'readonly': [('state','in', ('requested','approved','done','cancelled'))]}"/>
                        </group>
                        <group>
                            <field name="request_date"
                                   attrs="{'readonly': [('state','in', ('requested','approved','done','cancelled'))]}"/>
                        </group>
                    </group>
                    <group string="Products"/>
                    <field name="product_ids" attrs="{'readonly': [('state','=', 'done')]}">
                        <tree editable="bottom">
                            <field name="product_name" attrs="{'readonly': [('parent.state','=', 'done')]}"
                                   required="1"/>
                            <field name="generic_name" attrs="{'readonly': [('parent.state','=', 'done')]}"/>
                            <field name="brand" attrs="{'readonly': [('parent.state','=', 'done')]}"/>
                            <field name="qty_req" attrs="{'readonly': [('parent.state','=', 'done')]}"/>
                        </tree>
                    </field>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>
    <record id="product_request_tree" model="ir.ui.view">
        <field name="name">Request For Product Tree</field>
        <field name="model">product.request</field>
        <field name="arch" type="xml">
            <tree string="Request For Product">
                <field name="request_date"/>
                <field name="user"/>
                <field name="doctor"/>

            </tree>
        </field>
    </record>
    <record id="patient_reg_search_view" model="ir.ui.view">
        <field name="name">product.request.search</field>
        <field name="model">product.request</field>
        <field name="arch" type="xml">
            <search string="Request For Product">
                <field name="request_date"/>
                <field name="user"/>
                <field name="doctor"/>
            </search>
        </field>
    </record>
    <record id="product_request_action" model="ir.actions.act_window">
        <field name="name">Request For Product</field>
        <field name="res_model">product.request</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="product_request" parent="medical_opthalmology.products" name="Request For Product"
              action="product_request_action" sequence="7"
              groups="medical_opthalmology.group_doctor_access,medical_opthalmology.group_opticals_access,medical_opthalmology.group_pharmacy_access"/>

</odoo>