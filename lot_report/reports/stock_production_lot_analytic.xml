<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="update_analytic_qty_view" model="ir.ui.view">
        <field name="name">stock.production.lot.analytic.update.form</field>
        <field name="model">stock.production.lot.update.analytic</field>
        <field name="arch" type="xml">
            <form string="Update Qty">
                <p class="oe_grey">
                    Update Qty
                </p>
                <footer>
                    <button string="Update Qty" name="update_qty" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_account_qty_update_analytic"
                multi="True"
                key2="client_action_multi" name="update Qty"
                res_model="stock.production.lot.update.analytic" src_model="stock.production.lot.analytic"
                view_mode="form" target="new" view_type="form"/>
    <record id="lot_line_tree" model="ir.ui.view">
        <field name="name">stock.production.lot.analytic.tree</field>
        <field name="model">stock.production.lot.analytic</field>
        <field name="arch" type="xml">
            <tree string="Vendor Reports">
                <field name="name"/>
                <field name="barcode"/>
                <field name="product_id"/>
                <field name="purchase_order_id"/>
                <field name="related_vendor_id"/>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="product_qty_c" sum="product_qty_c"/>
                <field name="product_qty_po" sum="product_qty_po"/>
                <field name="product_cost_po" sum="product_cost_po"/>
                <field name="product_qty_sale" sum="product_qty_sale"/>
                <field name="product_cost_sale" sum="product_cost_sale"/>
            </tree>
        </field>
    </record>
    <record id="lot_analytic_line_search" model="ir.ui.view">
        <field name="name">stock.production.lot.analytic.search</field>
        <field name="model">stock.production.lot.analytic</field>
        <field name="arch" type="xml">
            <search string="Vendor report">
                <field name="name"/>
                <field name="barcode"/>
                <field name="product_id"/>
                <field name="purchase_order_id"/>
                <field name="related_vendor_id"/>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="product_qty_c" sum="product_qty_c"/>
                <field name="product_qty_po" sum="product_qty_po"/>
                <field name="product_cost_po" sum="product_cost_po"/>
                <field name="product_qty_sale" sum="product_qty_sale"/>
                <field name="product_cost_sale" sum="product_cost_sale"/>
                <group string="Group By" name="groupby">
                    <filter name="name" string="Name" context="{'group_by': 'name'}"/>
                    <filter name="barcode" string="Barcode" context="{'group_by': 'barcode'}"/>
                    <filter name="related_vendor_id" string="Related Vendor"
                            context="{'group_by': 'related_vendor_id'}"/>
                    <filter name="partner_id" string="Vendor" context="{'group_by': 'partner_id'}"/>
                    <filter name="product_id" string="Product" context="{'group_by': 'product_id'}"/>
                    <filter name="purchase_order_id" string="PO" context="{'group_by': 'purchase_order_id'}"/>
                    <filter name="company_id" string="Branch" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="lot_analytic_line_pivot" model="ir.ui.view">
        <field name="name">stock.production.lot.analytic.pivot</field>
        <field name="model">stock.production.lot.analytic</field>
        <field name="arch" type="xml">
            <pivot string="Vendor Report">
                <field name="related_vendor_id" type="row"/>
                <field name="product_qty_c" type="measure"/>
                <field name="product_qty_po" type="measure"/>
                <field name="product_qty_sale" type="measure"/>
                <field name="product_cost_sale" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="lot_analytic_line_graph" model="ir.ui.view">
        <field name="name">stock.production.lot.analytic.graph</field>
        <field name="model">stock.production.lot.analytic</field>
        <field name="arch" type="xml">
            <graph string="Vendor Report">
                <field name="related_vendor_id" type="row"/>
                <field name="product_qty_c" type="measure"/>
                <field name="product_qty_po" type="measure"/>
                <field name="product_qty_sale" type="measure"/>
                <field name="product_cost_sale" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="lot_line_action" model="ir.actions.act_window">
        <field name="name">Vendor Analysis</field>
        <field name="res_model">stock.production.lot.analytic</field>
        <field name="view_mode">tree,pivot,graph</field>
    </record>
    <menuitem id="menu_lot_line_action"
              action="lot_line_action"
              parent="main_menu_secuirty.menu_pharm"
              sequence="20"/>
</odoo>
