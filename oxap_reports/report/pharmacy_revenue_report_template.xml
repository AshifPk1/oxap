<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pharmacy_revenue_report_template">
        <t t-call="medical_opthalmology.external_layout_custom">
            <div class="page">
                <center>
                    <h3>
                        <strong>REVENUE REPORT</strong>
                    </h3>
                </center>
                <br/>
                <h4><span t-esc="date_from"/>&#160;TO&#160;<span t-esc="date_to"/>
                </h4>
                <br/>
                <h4>DOCTOR :
                    <span t-esc="doctor_name"/>
                </h4>
                <br/>
                <table width="100%" class="table table-bordered mb64">
                    <thead>
                        <tr>
                            <td></td>
                            <td>Total Number</td>
                            <td>Total Amount</td>
                        </tr>
                    </thead>

                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                          <tr>
                              <td>
                                  <span><strong>Registrations</strong></span>
                              </td>
                              <td>
                                <span t-esc="doc['registrations']"/>
                              </td>
                              <td>
                                <span t-esc="doc['registration_total']"/>
                              </td>
                        </tr>
                        <tr>
                            <td>
                                <span><strong>Pharmacy Prescriptions</strong></span>
                            </td>
                            <td>
                                <span t-esc="doc['pharmacy_prescribed']"/>
                            </td>
                            <td>
                                <span t-esc="'%.2f'% doc['total_amount']"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span><strong>Work Orders</strong></span>
                            </td>
                            <td>
                                <span t-esc="doc['work_orders']"/>
                            </td>
                            <td>
                                <span t-esc="doc['work_order_total']"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span><strong>Investigations</strong></span>
                            </td>
                            <td>
                                <span t-esc="doc['investigations']"/>
                            </td>
                            <td>
                                <span t-esc="doc['investigation_total']"/>
                            </td>
                        </tr>
                            <tr>
                            <td>
                                <span><strong>Surgery</strong></span>
                            </td>
                            <td>
                                <span t-esc="doc['surgery']"/>
                            </td>
                            <td>
                                <span t-esc="doc['surgery_total']"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span><strong>Grand Total</strong></span>
                            </td>
                            <td></td>
                            <td>
                                <span t-esc="'%.2f'% doc['grand_total']"/>
                            </td>
                        </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>