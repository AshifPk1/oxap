<odoo>
    <record id="inventory_report_wizrad_view" model="ir.ui.view">
        <field name="name">inventory.report.wiz</field>
        <field name="model">inventory.report.wiz</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="section" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Get Report" type="object" class="oe_highlight" name="get_data"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="inventory_wiz_action" model="ir.actions.act_window">
        <field name="name">Inventory Valuation Report</field>
        <field name="res_model">inventory.report.wiz</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="inventory_report" name="Inventory Valuation Report" action="inventory_wiz_action"
              parent="menu_hospital_report_main" sequence="2"/>
</odoo>